<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bgimg">

    <TextView
        android:id="@+id/image_upload_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Image"
        android:textColor="@color/colorWhite"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:visibility="invisible"
        android:layout_above="@+id/image_upload_progressbar"
        android:layout_centerHorizontal="true" />


    <ProgressBar
        android:id="@+id/thumbnail_upload_progressbar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:indeterminate="false"
        android:max="100"
        android:progress="0"
        android:progressTint="@color/colorPrimary"
        android:visibility="invisible"
        android:clickable="false"
        android:layout_above="@+id/image_upload_text"
        android:layout_alignStart="@+id/image_upload_progressbar" />

    <ProgressBar
        android:id="@+id/image_upload_progressbar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:indeterminate="false"
        android:max="100"
        android:progress="0"
        android:progressTint="@color/colorPrimary"
        android:visibility="invisible"
        android:layout_marginBottom="15dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/image_upload_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload Image"
        app:bootstrapBrand="success"
        app:bootstrapSize="lg"
        app:buttonMode="regular"
        app:showOutline="true"
        app:roundedCorners="true"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/image_upload_text" />

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        app:bootstrapBrand="success"
        app:bootstrapSize="lg"
        app:buttonMode="regular"
        app:showOutline="true"
        app:roundedCorners="true"
        android:id="@+id/login_activity_open"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/gallery_open_button"
        android:layout_alignStart="@+id/gallery_open_button"
        android:layout_alignEnd="@+id/gallery_open_button" />

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Camera"
        app:bootstrapBrand="success"
        app:bootstrapSize="xl"
        app:buttonMode="regular"
        app:showOutline="false"
        app:roundedCorners="true"
        android:id="@+id/btn_open"
        android:layout_marginBottom="20dp"
        android:layout_above="@+id/image_upload_button"
        android:layout_alignStart="@+id/image_upload_button"
        android:layout_alignEnd="@+id/image_upload_button" />


    <TextView
        android:id="@+id/text_connection_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="No Product Connected"
        android:textColor="@android:color/holo_green_light"
        android:textStyle="bold"
        android:textSize="12dp"
        android:layout_above="@+id/thumbnail_upload_text"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp" />

    <TextView
        android:id="@+id/text_product_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@android:color/holo_green_light"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="12dp"
        android:layout_above="@+id/thumbnail_upload_text"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp" />

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Images"
        app:bootstrapBrand="success"
        app:bootstrapSize="lg"
        app:buttonMode="regular"
        app:showOutline="true"
        app:roundedCorners="true"
        android:id="@+id/gallery_open_button"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/image_upload_button"
        android:layout_alignStart="@+id/image_upload_button"
        android:layout_alignEnd="@+id/image_upload_button" />

    <TextView
        android:id="@+id/thumbnail_upload_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thumbnail"
        android:textColor="@color/colorWhite"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:visibility="invisible"
        android:layout_above="@+id/thumbnail_upload_progressbar"
        android:layout_centerHorizontal="true" />

    <com.beardedhen.androidbootstrap.BootstrapLabel
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:bootstrapBrand="primary"
        app:bootstrapHeading="h1"
        app:roundedCorners="true"
        android:text="DroneMapper"
        android:id="@+id/bootstrapLabel"
        android:layout_marginTop="26dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
